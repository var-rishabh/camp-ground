<% layout("layout/boilerplate") %>
<div id="map" class="mb-3" style="width: 100%; height: 500px;"></div>
<div class="container">
<h1>All Campgrounds</h1>
<% for (let c of campgrounds) { %>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <% if(c.images.length) { %> 
        <img class="img-fluid" src="<%= c.images[0].url %>">
        <% } else { %> 
        <img class="img-fluid" src="https://res.cloudinary.com/dgdqo0uxp/image/upload/v1623148284/YELPCAMP/fn7gwo7et5bui6aiwr1x.jpg">
        <% } %> 
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h4 class="card-title"> <%= c.title %> </h4>
          <h5 class="card-title"> <%= c.location %> </h5>
          <p class="card-text"> <%= c.description %> </p>
          <h5 class="card-title text-muted"> $<%= c.price %> </h5>
          <a class="btn btn-primary" href="/campgrounds/<%= c._id %>">Visit</a>
        </div>
      </div>
    </div>
  </div>
<% } %>
</div>
<script>
  const mapToken = "<%-process.env.MAPBOX%>";
  const campgrounds = {features: <%- JSON.stringify(campgrounds) %>};  
</script>

<script src="/js/clustermap.js"></script>